# Exemplo de .env para apps/api
# Copie para apps/api/.env para desenvolvimento local da API.

NODE_ENV=development

# Porta única exposta pela API (Electron e frontend consomem aqui)
APP_PORT=3000
PORT=3000

# Diretórios compartilhados (manter consistência com o .env raiz)
APP_DATA_DIR=/absolute/path/to/al-tool/data
DATA_DIR=/absolute/path/to/al-tool/data
DB_PATH=/absolute/path/to/al-tool/data/db/dev.sqlite3
UPLOAD_DIR=/absolute/path/to/al-tool/data/uploads
EXPORT_DIR=/absolute/path/to/al-tool/data/exports
INGESTS_DIR=/absolute/path/to/al-tool/data/ingests

# Permissão de origem para chamadas HTTP (use * apenas em dev)
CORS_ORIGIN=*

# Intervalo padrão de polling dos workers (segundos)
WORKER_POLL_SECONDS=5

# PRAGMAs opcionais do SQLite
SQLITE_JOURNAL_MODE=WAL
SQLITE_SYNCHRONOUS=NORMAL
SQLITE_CACHE_SIZE=-2000
SQLITE_TEMP_STORE=MEMORY
SQLITE_BUSY_TIMEOUT=5000

# Ingestão (pode reduzir em máquinas lentas ou aumentar p/ lotes maiores)
INGEST_SAMPLE_ROWS=1000
INGEST_BATCH_SIZE=200
